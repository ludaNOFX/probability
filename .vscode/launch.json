{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Current Go File",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${file}",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env"
    },
    {
      "name": "Launch Package",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}",
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Attach to Process",
      "type": "go",
      "request": "attach",
      "mode": "local",
      "processId": "${command:PickProcess}"
    },
    {
      "name": "Launch gopls (dev)",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${env:GOPATH}/src/golang.org/x/tools/gopls/main.go",
      "args": [
        "-port=9999"
      ],
      "cwd": "${env:GOPATH}/src/golang.org/x/tools/gopls"
    }
  ]
}